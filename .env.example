# MAX Bot Configuration (Go)
# Получить можно в диалоге с MasterBot: https://max.ru/MasterBot
MAX_BOT_TOKEN=your_bot_token_here

# MAX API Configuration (Main API)
MAX_API_HOST=0.0.0.0
MAX_API_PORT=8000
MAX_API_CLOUDPUB_URL=
# URL для доступа к MAX API через cloudpub (если локальный недоступен)

# Admin Panel Configuration
ADMIN_PANEL_HOST=0.0.0.0
ADMIN_PANEL_PORT=8080
ADMIN_PANEL_CLOUDPUB_URL=
# URL для доступа к Admin Panel через cloudpub (если локальный недоступен)

# University API Configuration
# ВАЖНО: Эти переменные используются ТОЛЬКО самим university-api сервисом
# MAX API и Admin Panel НЕ должны знать эти параметры
# MAX API использует base_url из БД (настраивается через Admin Panel)
UNIVERSITY_API_HOST=0.0.0.0
UNIVERSITY_API_PORT=8001
UNIVERSITY_API_CLOUDPUB_URL=
# URL для доступа к University API через cloudpub (если локальный недоступен)
# Используется только самим university-api сервисом

# Database Configuration (PostgreSQL)
# Main API Database
DATABASE_URL=postgresql://maxbot:maxbot123@postgres:5432/maxbot_db
POSTGRES_USER=maxbot
POSTGRES_PASSWORD=maxbot123
POSTGRES_DB=maxbot_db

# University API Database (отдельная БД)
UNIVERSITY_DATABASE_URL=postgresql://maxbot:maxbot123@postgres:5432/university_db